<%- include('partials/header') -%>

<h1>Welcome To Blog.</h1>

<% posts.forEach((post) => {%>
    <div class="jumbotron">
        <h2><%= post.title %></h2>
        <p class="lead"><%= post.content.substring(0, 90) %>... <a href="/posts/<%=post._id%>">Read more</a></p>
    </div>
<% }); %>

